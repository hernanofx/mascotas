        body,
        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            font-family: "Lato", sans-serif;
        }
        .w3-navbar,
        button,
        h1 {
            font-family: "Montserrat", sans-serif;
        }
        .fa-anchor,
        .fa-coffee {
            font-size: 200px;
        }

    </style>
    <body>
        <!-- Header -->
        <div class="w3-container w3-center w3-padding-32">
          <img src="/imagenes/logos/Banner.png" alt="banner" style="width:100%" class="w3-hover-opacity">
            <p class="w3-xlarge">Uniendo personas con animales</p>
            <button class="w3-btn w3-padding-16 w3-large w3-margin-top">Vos también podes hacer algo</button>
        </div>

        <!-- First Grid -->
        <div class="w3-row-padding w3-padding-64 w3-container">
            <div class="w3-content">
                <div class="w3-twothird">
                    <h1>Grilla 1</h1>
